<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>編集</h1>
      <%= render 'layouts/errors', obj: @book %>
      <%= form_with(model: [@post, @book], method: :patch) do |f| %>
      <div>
        <label>区分</label>
        <%= f.select :inout, [["収入", 1], ["支出", 2]], {} %>
      </div>
      <div>
        <label>科目</label>
        <%= f.text_field :category %>
      </div>
      <div>
        <label>金額</label>
        <%= f.number_field :amount %>
      </div>
      <div>
        <%= f.submit '登録' %>
      </div>
      <% end %>
    </div>
  </div>
</div>